<div class="row">
<div class="col-xs-12">
<div class="col-xs-6">
<h2>Sign up</h2>
</div>
<div class="col-xs-6">
<%= link_to new_admin_user_session_path do %>
  <div class="text-center"><button type="button" class="btn btn-primary">Admin Panel</button></div>
<% end %>
</div>
</div>
</div>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>
<%= flash[:error]%>
  <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "off", :required => true %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" , :required => true%>
</div>

<div class="field">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off" , :required => true%>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", :required => true %>
</div>
<div class="field">
<%= f.label :date_of_birth %><br />
<%= f.date_field :date_of_birth , autofocus: true %>
</div>
<div class="field">
<%= f.label :gender %><br />
<%= f.select :gender, User.genders.keys %>
</div>
<div class="field">
<%= f.label :profile_picture %><br />
<%= f.file_field :profile_picture %>
</div>
<div class="field">
<%= f.label :role %><br />
<%= f.select :role, User.roles.keys %>
</div>
<br/>
<div class="actions">
  <%= f.submit "Sign up" %>
</div>
<% end %>
<%= render "devise/shared/links" %>
